<div class="new-news">
  <h1>新規投稿</h1>
  <!-- form_with部分 -->
  <%= form_with model: @news, url: homes_path do |f| %>
    <h4>月日　(曜日)</h4>
    <div class="day">
      <%= f.text_field :day, placeholder: "〇月〇日（曜日）",  size: "30" %>
    </div>
    
    <div class="info">
    <h4>新着情報内容</h4>
      <%= f.text_area :info, placeholder: "期間限定で〇〇登場!!", size: "32x10" %><br>
    </div>
  
    <%= f.submit '投稿' %>
  <% end %>
</div>